---
import "@/styles/global.css";
import carPhoto from "@/../public/car.jpg";

const profileIcon = carPhoto.src;

const sections = [
    { id: "#home", name: "Inicio" },
    { id: "#proyects", name: "Proyectos" },
];
---

<header
    class="flex items-center justify-between p-4 bg-gradient-to-r from-gray-900/70 via-gray-800/70 to-gray-700/70 shadow-md sticky top-0"
>
    <div class="flex items-center space-x-4">
        <img
            src={profileIcon}
            alt="Icono de perfil"
            class="w-12 h-12 rounded-full border-2 border-white shadow-md"
        />
        <span class="text-white text-2xs font-semibold">Carlos LÃ³pez</span>
    </div>
    <nav class="flex space-x-4">
        {
            sections.map((sec) => (
                <a
                    href={sec.id}
                    class="text-white hover:text-sky-400 transition-colors duration-300 px-3 py-1 rounded-md hover:bg-white/10"
                >
                    {sec.name}
                </a>
            ))
        }
    </nav>
</header>
